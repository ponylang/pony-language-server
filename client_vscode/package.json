{
  "name": "pony-lsp",
  "description": "A Pony language server",
  "license": "MIT",
  "version": "0.58.4",
  "categories": [],
  "repository": "https://github.com/kidandcat/pony-language-server",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:pony"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Pony configuration",
      "properties": {
        "pony.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Pony language server."
        }
      }
    },
    "languages": [
      {
        "id": "pony",
        "aliases": [
          "Pony",
          "pony"
        ],
        "filenames": [
          "corral.json"
        ],
        "extensions": [
          ".pony"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pony",
        "scopeName": "source.pony",
        "path": "./pony.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode none --watch"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.18.93",
    "@types/vscode": "^1.75.0",
    "@types/which": "^2.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^4.8.4",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
